doctype html
html(lang="en")
   head
      // Meta
      - var site = "Patrick E. Vargas"
      if ( title )
         title= title + " | " + site
      else
         title= site

      link(rel="shortcut icon", href="/images/favicon.ico")
      link(rel="stylesheet", href="/bootstrap/css/bootstrap.min.css")
      link(rel="stylesheet", href="/bootstrap/css/bootstrap-theme.min.css")
   body

      nav.navbar.navbar-default
         .container
            .navbar-header
               button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='.navbar-collapse')
                  span.sr-only Toggle navigation         
                  span.icon-bar
                  span.icon-bar
                  span.icon-bar
            a.navbar-brand(href='/') Patrick E. Vargas
            .navbar-collapse.collapse
               menu.nav.navbar-nav
                  li: a(href="/about") About
                  li: a(href="/resume") Resume
                  li: a(href="#") Code
                  li: a(href="/design") Design
                  li: a(href="#") Photography
                  li: a(href="/music") Music

      // Content
      article
         block content    

      footer
         .container
            ul
               li &copy; #{new Date().getFullYear()} Patrick E. Vargas 
               li: a(href="http://www.vargascorpus.com/") www.vargascorpus.com
            .row
               .col-md-2: a(href="#").thumbnail: img(src="http://placehold.it/100&text=Email" alt="Email") 
               .col-md-2: a(href="#").thumbnail: img(src="http://placehold.it/100&text=Telephone" alt="Telephone") 
               .col-md-2: a(href="#").thumbnail: img(src="http://placehold.it/100&text=LinkedIn" alt="LinkedIn") 
               .col-md-2: a(href="#").thumbnail: img(src="http://placehold.it/100&text=StackOverflow" alt="StackOverflow") 
               .col-md-2: a(href="#").thumbnail: img(src="http://placehold.it/100&text=GitHub" alt="GitHub") 
               .col-md-2: a(href="#").thumbnail: img(src="http://placehold.it/100&text=Behance" alt="Behance") 
               
      block javascript

      //
         Bootstrap core JavaScript
         ==================================================
         Placed at the end of the document so the pages load faster
      script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js")
      script(src="/bootstrap/js/bootstrap.min.js")